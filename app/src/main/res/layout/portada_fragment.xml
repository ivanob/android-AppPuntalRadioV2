<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/verde_bg_fragmento"
    android:gravity="center"
    android:orientation="vertical" >

    <ListView
        android:id="@+id/listTweets"
        android:layout_height="wrap_content"
        android:layout_width="match_parent">
    </ListView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="137dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="21dp"
        android:gravity="top|center" >

        <ImageButton
            android:id="@+id/btnTwitter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:background="@null"
            android:fitsSystemWindows="false"
            android:padding="@dimen/distance_media_buttons"
            android:scaleType="fitCenter"
            android:src="@drawable/twitter_64x64" />

        <ImageButton
            android:id="@+id/btnFacebook"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:padding="@dimen/distance_media_buttons"
            android:src="@drawable/facebook_64x64" />

        <ImageButton
            android:id="@+id/btnBlogger"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:padding="@dimen/distance_media_buttons"
            android:src="@drawable/blogger_64" />

        <ImageButton
            android:id="@+id/btnEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:padding="@dimen/distance_media_buttons"
            android:src="@drawable/email_64" />

    </LinearLayout>

</RelativeLayout>